@{
    ViewData["Title"] = "Calendar";
    ViewData["Header"] = "Be sure to check our calendar frequently so you don't miss out on an upcoming service project or club event.";
}

<body>
<div class="row">
    <div class="column" style="width: @(Model ? "100%" : "20%")">
        <p>
            If you want to attend an event that requires some form of registration, click on the event in the calendar and there will be a sign-up link in it's description.
        </p>
        <br/>
        <p>
            Many if not all of the events on this calendar will also be announced and explained in detail during our meetings.
        </p>
    </div>
    <div style="border: 0; padding-right: 15px; top: 0">
        @{
            if(Model) //Mobile
            {
                <iframe src="https://calendar.google.com/calendar/embed?mode=AGENDA&amp;height=600&amp;wkst=1&amp;bgcolor=%23e6d7ff&amp;src=wahskeyclub13%40gmail.com&amp;color=%2323164E&amp;ctz=America%2FNew_York" style="border-width: 0; float: left; padding-left: 15px;" width="300" height="600" frameborder="0" scrolling="no"></iframe>
            }
            else //Desktop
            {
                <iframe src="https://calendar.google.com/calendar/embed?src=wahskeyclub13%40gmail.com&ctz=America%2FNew_York&bgcolor=%23e6d7ff&amp" style="border: 0; float: right;" width="79%" height="500" frameborder="0" scrolling="no"></iframe>
            }
        }
    </div>
</div>
</body>